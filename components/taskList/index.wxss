/* pages/components/taskList/index.wxss */
@import "../../app.wxss";

.task-list {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.taskList-img{
  width: 38rpx;
  height: 36rpx;  
  position: relative;
  top: -2rpx;    
}

.taskList-img image{
  width: 100%;
  height: 100%;
}

.task-list .item {
  /* height: 80rpx; */
  font-size: 34rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  overflow: hidden;
  border-bottom: 1rpx dotted #f1f1f1;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: flex;
  flex-wrap: nowrap;
  /* justify-content: space-between; */
  align-items: center;
}

.right{
  max-width: 94%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.verified {
  padding: 0 4rpx;
  background-color: #89C0F6;
  color: #fff;
  font-size: 28rpx;
  border-radius: 6rpx;
  margin-left: 4rpx;
}

.not-verified {
  padding: 0 4rpx;
  background-color: #ff6348;
  color: #fff;
  font-size: 28rpx;
  border-radius: 6rpx;
  margin-left: 4rpx;
}

.job-name{
  display: inline-block;
  /* text-align: center; */
  max-width: 250rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* font-size: 28rpx; */
}
.text-right{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* font-size: 28rpx; */
}

.del-btn{
  font-size: 28rpx;
  /* padding: 10rpx 20rpx; */
  color: #1e90ff;
  text-align: center;
  background-color: #fff;
  border: 1rpx solid #1e90ff;
}

.active{
  background-color: rgba(0, 0, 0,0.15);
  font-size: 34rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  overflow: hidden;
  border-bottom: 1rpx dotted #f1f1f1;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.humbnail{
  height: 120rpx;
  width: 100%;
  display: flex;
  justify-content:space-around;
  padding: 0 80rpx;
  box-sizing: border-box;
}

.humbnail image{
  width: 180rpx;
  height: 120rpx;
  border-radius: 16rpx;
}