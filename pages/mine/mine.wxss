.user-nickName {
  width: 100%;
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
}

.user-pro {
  display: flex;
  align-items: center;
}

.user-position {
  font-size: 24rpx;
}

.user-favorite {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.user-favorite .img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.user-btns, .card-btns {
  width: 100%;
  display: flex;
  align-items: center;
  height: 300rpx;
}

.user-btn {
  width: 50%;
  margin: auto;
}

.card-btn {
  margin: 40rpx auto;
  background-color: #7eac25;
  color: #fff;
}

.nav-list {
  display: flex;
  /* height: 140rpx; */
  /* margin: 10rpx 0 5rpx; */
  flex-wrap: wrap;
}

.nav-item {
  /* padding: 10rpx 0; */
  color: #666;
  width: 100%;
  height: 104rpx;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: start;
}

.active {
  background-color: rgba(0, 0, 0, 0.15);
}

.nav-item .img {
  width: 24rpx;
  height: 22rpx;
}

.nav-item .title {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  margin-left: 16rpx;
  box-sizing: border-box;
}

.item-count {
  padding: 0 10rpx;
  font-weight: bold;
  font-size: 30rpx;
}

.browse-list {
  width: 100%;
}

.browse-item {
  height: 80rpx;
  display: flex;
  padding: 20rpx;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  justify-content: space-between;
  font-size: 28rpx;
}

.browse-item .left {
  width: 60%;
  display: flex;
  align-items: center;
}

.browse-item .left .img {
  width: 80rpx;
  min-width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 20rpx;
  border: 1rpx solid #f5f5f5;
}

.browse-item .left .name {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.browse-item .time {
  width: 40%;
  text-align: right;
  color: #999;
  font-size: 24rpx;
}

.prompt {
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
  background-color: #1e90ff;
  color: #fff;
  padding: 20rpx 0;
}

.item .item-tit::before {
  content: "* ";
  color: #ff6348;
}

.item {
  width: 100%;
  display: flex;
  justify-content: flex-start;
}

.item .item-title {
  width: 230rpx;
  text-align: left;
  height: 70rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 70rpx;
}

.item .item-input {
  width: 100%;
  height: 70rpx;
  box-sizing: border-box;
  color: #aaa;
  text-align: left;
  border: 1rpx solid #f5f5f5;
}

.item-picker {
  min-width: 260rpx;
  width: 35% !important;
  display: inline-block;
}

.picker {
  background-color: #7eac25;
  color: #fff;
  display: inline-block;
  padding: 0 15px;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
}

.imgs {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.imgs .img-item-a {
  width: 30%;
  margin: 1%;
  position: relative;
  text-align: center;
}

.imgs .img-item-a-x {
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  border: 1rpx dotted #1e90ff;
  font-size: 60rpx;
  color: #1e90ff;
  text-align: center;
  line-height: 140rpx;
}

.imgs .img-item-a-t {
  font-size: 24rpx;
  color: #1e90ff;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.imgs .img-item-a-o {
  box-sizing: border-box;
  height: 140rpx;
  border-radius: 10rpx;
}

.imgs .img-del {
  width: 40rpx;
  height: 40rpx;
  border: 50%;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}

.item {
  width: 100%;
  display: flex;
