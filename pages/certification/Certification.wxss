.imgs {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.imgs .img-item {
  width: 309rpx;
  height: 211rpx;
  margin: 0 10rpx 10rpx;
  flex: 1;
  box-sizing: border-box;
  position: relative;
  text-align: center; 
}

.mb-20{
  margin-top: 40rpx;
  box-sizing: border-box;
}

.mb-20 .img-item {
  font-size: 22rpx;
  color: #666;
}

.imgs .img-del {
  width: 40rpx;
  height: 40rpx;
  border: 50%;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}

.imgs .img-item-a-x {
  width: 100%;
  height: 100%;
  
  border-radius: 10rpx;
  /* border: 1rpx dotted #1e90ff; */
  /* font-size: 60rpx; */
  color: #1e90ff;
  text-align: center;
  /* display: flex; */
  line-height: 100%;
  align-items: center;
  flex-wrap: nowrap;
  background-color: rgba(0, 0, 0, 0.1);
  padding: 52rpx 67rpx 47rpx 67rpx;
  box-sizing: border-box;
}

.imgs .img-item-a-x view{
  width: 100%;
}

.imgs .img-item-a-x image{
  width: 88rpx;
  height: 70rpx;
}

.imgs .img-item-a-t {
  font-size: 24rpx;
  color: #1e90ff;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.imgs .img-item-a-o {
  box-sizing: border-box;
  width: 100%;
  height:100%;
  /* height: 140rpx; */
  border-radius: 10rpx;
}

.item-img{
  height: 280rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top: 100rpx;
  box-sizing: border-box;
  position: relative;
  /* top: 80rpx; */
}

.item-img>view{
  color: #505050;
  font-size: 26rpx;
}

.item-img-bottom{
  text-align: center;
  color: #505050;
  font-size: 26rpx;
}

.explain{
  width: 100%;
  height: 22rpx;
  font-size: 22rpx;
  color: #666;
  display: inline-block;
  margin-top: 28rpx;
  box-sizing: border-box;
}

.certification .btn-release {
  display: block;
  width: 100%;
  margin-top: 80rpx;
  font-size: 32rpx;
  background-color: #4098FD;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  padding: 0;
  position: relative;
  top: 100rpx;
}

.top-edit{
  display: flex;
  justify-content: flex-end;
}

.btn-edit{
  width: 90rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  height: 45rpx;
  line-height: 45rpx;
  background-color: #4098FD;
  border-radius: 10rpx;
  
}

.divider{
  width: 100%;
  height: 10rpx;
  background-color: #f1f1f1;
}

.code-btn{
  background-color: #4098FD;
  width: 170rpx;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}

.certification-type{
  display: flex;
  align-items: center;
}