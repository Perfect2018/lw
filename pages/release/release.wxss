/* pages/release/release.wxss */
page{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.07);
}
.release-top {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  font-size: 30rpx;
  color: #505050;
  background-color: #fff;
}

.top-item-left,
.top-item-right {
  flex: 1;
  text-align: center;
  justify-content: center;
  line-height: 88rpx;
  flex-wrap: nowrap;
}

.release-top view image {
  width: 16rpx;
  height: 10rpx;
}

.item-list {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.item-quick {
  width: 100%;
  color: #fff;
  background-color: #1e90ff;
  padding: 10rpx;
}

.item {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  font-size: 26rpx;
}

.item .item-tit::before {
  content: "* ";
  color: #ff6348;
}

.item-title {
  /* width: 60rpx; */
  text-align: left;
  height: 70rpx;
  
  font-size: 26rpx;
  line-height: 70rpx;
  color: #505050;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.detail-info>view .title-name{
  width: 80%;
}

.item-picker {
  width: 260rpx;
  /* width: 35% !important; */
  display: inline-block;
}

.picker {
  /* background-color: #7eac25;
  color: #fff;
  display: inline-block;
  padding: 0 15px;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  margin-right: 20rpx; */
  width: 100%;
  font-size: 30rpx;
  color: #505050;
  line-height: 88rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker image{
  position: relative;
  top: -4rpx;
}

/* input, textarea {
  color: #aaa !important;
} */

.item-input {
  height: 70rpx;
  width: 50%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  color: #aaa;
  font-size: 26rpx;
}

.code-input{
  width: 40%;
}

.item-right-radio {
  width: 300rpx;
  height: 110rpx;
  position: relative;
  left: 60rpx;
  top: -20rpx;
  z-index: 9;
  border: 1rpx solid #aaa;
  border-radius: 16rpx;
}

.radio-group {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: center; */
  padding: 0;
}

.radio-label {
  padding: 0;
}

.item-input-describe {
  /* min-height: 70rpx; */
  height: 150rpx;
  /* width: 150rpx; */
  color: #aaa;
  box-sizing: border-box;
  text-align: left;
  /* border: 1rpx solid #f5f5f5; */
  /* border-radius: 5rpx */
  font-size: 26rpx;
}

.prompt {
  font-size: 30rpx;
  text-align: center;
  font-weight: bold;
  color: #1e90ff;
  padding: 20rpx 0;
}

.imgs {
  display: flex;
  justify-content: space-around;
  width: 100%;
  align-items: center;
  padding-top: 36rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  /* flex-wrap: wrap; */
}

