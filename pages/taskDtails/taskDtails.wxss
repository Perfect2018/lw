/* pages/missionDtails/missionDtails.wxss */

.QRCanvas {
  width: 600px;
  height: 500px;
}

.QR-z-img {
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99;
  top: 0;
}

.QR-img .img {
  width: 660rpx;
  height: 550rpx;
  /* width: 95%;
  height: 90%; */
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  object-fit: initial;
  position: absolute;
}

.ad {
  width: 100%;
  font-size: 0;
}

.ad .ad-image {
  height: 200rpx;
}

.classification {
  padding: 10rpx;
  color: #fff;
  background-color: #1e90ff;
}

.verified {
  padding: 10rpx 0;
  color: #fff;
  text-align: center;
  background-color: #1e90ff;
}

.not-verified {
  padding: 10rpx 0;
  color: #fff;
  text-align: center;
  background-color: #ff6348;
}

.title {
  font-size: 34rpx;
  color: #000;
  font-weight: bold;
  padding: 0 10rpx;
}

.announcer {
  height: 80rpx;
  display: flex;
  padding: 20rpx;
  align-items: center;
  border-top: 1rpx solid #e9e9e9;
  border-bottom: 1rpx solid #e9e9e9;
  justify-content: space-between;
  font-size: 28rpx;
}

.announcer .left {
  width: 60%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.announcer .left .img {
  max-width: 20%;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 20rpx;
}

.announcer .left .right {
  display: flex;
  width: 80%;
  flex-direction: column;
  justify-content: space-around;
}

.announcer .right .name {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.announcer .right .time {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #999;
  font-size: 24rpx;
}

.announcer .btn {
  display: flex;
}

.announcer .btn .favorite {
  width: 134rpx;
  height: 66rpx;
  font-size: 28rpx;
  /* padding: 10rpx 20rpx; */
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  background-color: #1e90ff;
  line-height: 66rpx;
}

.announcer .btn .share {
  font-size: 28rpx;
  /* padding: 10rpx 20rpx; */
  color: #1e90ff;
  text-align: center;
  background-color: #fff;
  border: 1rpx solid #1e90ff;
}

.address {
  margin: 20rpx 0;
  padding: 0 10rpx;
  font-size: 32rpx;
  text-align: justify;
  line-height: 1.5rem;
  letter-spacing: 3rpx;
}

.content .text {
  margin: 20rpx 0;
  padding: 0 20rpx;
  font-size: 32rpx;
  text-align: justify;
  line-height: 1.5rem;
  letter-spacing: 3rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.content .img {
  margin-bottom: 10rpx;
  border-radius: 20rpx;
}

/* .footer {
  width: 100%;
  position: fixed;
  background-color: #fff;
  bottom: 0;
} */

.contact {
  width: 50%;
  height: 100rpx;
  margin: 60rpx auto 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1e90ff;
}

.contact .img {
  height: 40rpx;
  width: 50rpx;
  margin-right: 10rpx;
}

.contact .title {
  color: #fff;
  font-size: 34rpx;
}

.detail-img {
  border-radius: 16rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.name text {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #999;
}

.name image {
  width: 26rpx;
  height: 22rpx;
  margin-left: 50rpx;
  box-sizing: border-box;
}

.bottom-btn {
  height: 200rpx;
  text-align: right;
  /* margin-bottom: 80rpx; */
  box-sizing: border-box;
}

.praise{
  margin-right: 5rpx;
}

.praise,
.comment {
  width: 130rpx;
  height: 66rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 66rpx;
  border-radius: 10rpx;
  color: #1e90ff;
  background-color: #fff;
  border: 1rpx solid #1e90ff;
  display: inline-block;
}

.context {
  
  width: 100%;
  /* height: 300rpx; */
  border-bottom: 1rpx solid #e9e9e9;
}

.context label{
  text-align: start;
width: 96rpx;
height: 50rpx;
font-size: 26rpx;
color: #505050;

}


.context textarea {
  height: 150rpx;
  width: 100%;
  overflow: scroll;

  /* height: 100%; */
}

.context view {
  text-align: right;
}

.context button {
  border: 1rpx solid #1e90ff;
  color: #1e90ff;
}

.place-style {
  font-size: 26rpx;
  color: #ccc;
}

.comment-item view{
  font-size: 28rpx;
  color: #ccc;
}

.comment-detail .img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 20rpx;
}

.comment-detail{
  display: flex;
  justify-content: start;
  margin-top: 6rpx;
  box-sizing: border-box;
}

.comment-item{
  background-color: #f1f1f1;
  border-bottom: 1rpx solid #e9e9e9;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
}

.comment-content{
  /* padding:2rpx 5rpx; */
  box-sizing: border-box;
}